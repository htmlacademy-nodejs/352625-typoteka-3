extends blocks/layout/regular

block content
  main
    section.search-page
      if result === null
        .search-page__wrapper
          h1 Поиск
          .search.search-page__form
            form(action="/search" method="get")
              label
                input(type="search" name="search" placeholder="Что ищем?" value="")
              button.search__button.button.button--transparent(type="submit") Найти
      else if result.length > 0
        .search-page__wrapper
          h1 Поиск
          .search.search-page__form
            form(action="/search" method="get")
              label
                input(type="search" name="search" placeholder="Что ищем?" value=`${searchRequest}`)
              button.search__button.button.button--transparent(type="submit") Найти
            each item in result
              .search__result
                time.search__date(datetime=`${item.createdDate.datetime}`)= item.createdDate.human
                a.search__link= item.title
      else
        .search-page__wrapper.search-page__wrapper--empty
          h1 Поиск
          .search.search-page__form
            form(action="/search" method="get")
              label
                input(type="search" name="search" placeholder="Что ищем?" value=`${searchRequest}`)
              button.search__button.button.button--transparent(type="submit") Найти
            p.search-page__empty Ничего не нашлось
