extends blocks/layout/admin

block content
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        - const sortedArticles = auth.userArticles.sort((a, b) => b.createdDate.machine - a.createdDate.machine)
        each item in sortedArticles
          li.notes__list-item
            time.notes__item-time(datetime=`${item.createdDate.datetime}`)= item.createdDate.human
            a.notes__item-text(href=`/offers/${item.id}`)= item.title
            button.notes__button.button.button--close-item(type="button")
              span.visually-hidden Закрыть строку списка

