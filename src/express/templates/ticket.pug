extends blocks/layout/regular

block content
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a.post__backwards.button.button--backwards(href="/") Назад
            time.post__date(datetime=`${article.created_date}`)= getHumanDate(article.created_date)
            h2.post__title.title.title--main= article.title
            ul.post__themes.themes
              each category in article.categories
                li.themes__item
                  a.themes__item-link(href=`/articles/category/${category.id}`)= category.name
                    sup= category.articles.length
                  button.themes__remove-btn(type="button") Удалить категорию
          .post__picture
            img(src=`/img/${article.picture}@1x.jpg` alt=`${article.picture}`)
          .post__text
            h3= article.announce
            p= article.fullText
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment in article.comments
              li.comments__comment
                .comments__avatar.avatar
                  img(src=`/img/${comment.author.avatar.regular}.png` alt="аватар пользователя")
                .comments__text
                  .comments__head
                    p= `${comment.author.firstname} ${comment.author.lastname} •`
                    time.comments__date(datetime=`${comment.created_date}`)= getHumanDate(comment.created_date)
                  p.comments__message= comment.text
          .comments__footer.comments__footer--user
            if auth.status
              form(action="#" method="POST")
                .comments__avatar.avatar
                  img(src=`/img/${auth.avatar.regular}.png` alt="аватар пользователя")
                label
                  textarea(rows="1" placeholder="Присоединиться к обсуждению")
                button.comments__button.button.button--colored(type="submit") Опубликовать

